<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:src="@drawable/patient_status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Myo: "
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="verbunden"
        android:id="@+id/detect_gestures_tv_myo_status"
        android:layout_toRightOf="@+id/textView9"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patienten Status: "
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/detect_gestures_tv_myo_status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stabil"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Herzfrequenz: 78"
        android:id="@+id/textView10"
        android:textSize="17sp"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atemfrequenz: 14"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_toEndOf="@+id/textView9"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Probleme: "
        android:id="@+id/textView12"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toEndOf="@+id/textView9"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uhrzeit: 14:21"
        android:id="@+id/textView13"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="keine Probleme"
        android:id="@+id/textView14"
        android:layout_alignTop="@+id/textView12"
        android:layout_toEndOf="@+id/textView12"
        android:textSize="17sp"
        android:textColor="@android:color/holo_green_dark" />

</RelativeLayout>